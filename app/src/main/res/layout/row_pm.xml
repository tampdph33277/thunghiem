<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/rowpm"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/layout_pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/img_edit_pm">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_id_pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_tenTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_tensach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_gia_thue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_thueVAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_ngayMuon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_ngayTra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
<!--            <TextView-->
<!--                android:id="@+id/tv_status"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="CHưa chả sách"-->
<!--                android:textColor="#D65252"-->
<!--                />-->
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_xoa_pm"
            android:src="@drawable/baseline_delete_forever_24"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_edit_pm"
            android:src="@drawable/baseline_edit_24"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/img_xoa_pm"
            android:padding="10dp"/>
    </RelativeLayout>

</LinearLayout>